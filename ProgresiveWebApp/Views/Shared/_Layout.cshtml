<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProgresiveWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProgresiveWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="navbar">
                <h1><a href="/" class="brand">Brand</a></h1>
                <button type="button" class="burger" id="burger">
                    <span class="burger-line"></span>
                    <span class="burger-line"></span>
                    <span class="burger-line"></span>
                </button>
                <span class="overlay" id="overlay"></span>
                <div class="menu" id="menu">
                    <ul class="menu-block">
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 1</a></li>
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 2</a></li>
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 3</a></li>
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 4</a></li>
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 5</a></li>
                        <li class="menu-item"><a class="menu-link" href="#">Pagina 6</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container" style="margin-top: 5rem">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - ProgresiveWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/menu.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
